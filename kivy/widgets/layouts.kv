#:kivy 2.1.0

<MainScreen@BoxLayout>:
    orientation: "vertical"
    padding: 20
    spacing: 10

    # --- Top bar (battery + logo + home) ---
    BoxLayout:
        size_hint_y: 0.2
        spacing: 10

        # Battery icon + % label
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 0.3
            spacing: 5
            Image:
                source: "assets/battery.png"  # YET TO REPLACE
                size_hint_x: 0.4
                allow_stretch: True
            # YET TO GET REAL BATTERY LEVEL
            Label:
                id: battery_label
                text: "87%"
                color: 0,1,0,1  # green
                font_size: "20sp"
                halign: "left"
                valign: "middle"

        # Logo
        Image:
            source: "assets/logo.png"  # YET TO REPLACE
            allow_stretch: True
            keep_ratio: True
            size_hint_x: 0.4

    # --- Middle section (2 stickmen) ---
    BoxLayout:
        size_hint_y: 0.8
        spacing: 40
        padding: 40