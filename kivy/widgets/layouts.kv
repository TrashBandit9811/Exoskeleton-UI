#:kivy 2.1.0

<MainScreen@BoxLayout>:
    orientation: "vertical"
    padding: 20
    spacing: 10

    # --- Top bar (battery + logo + home) ---
    BoxLayout:
        size_hint_y: 0.2
        spacing: 10

        # Battery icon + % label
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 0.3
            spacing: 5
            Image:
                source: "assets/battery.png"  # Placeholder
                size_hint_x: 0.4
                allow_stretch: True
            # Placeholder for real battery level
            Label:
                id: battery_label
                text: "87%" # Placeholder
                color: 0,1,0,1  # green
                font_size: "20sp"
                halign: "left"
                valign: "middle"

        # Logo
        Image:
            source: "assets/logo.png"  # Placeholder
            allow_stretch: True
            keep_ratio: True
            size_hint_x: 0.4

    # --- Middle section (2 stickmen) ---
    BoxLayout:
        size_hint_y: 0.8
        spacing: 40
        padding: 40

        # Stand icon + text
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            Image:
                id: stand_icon
                source: "assets/icons/standing-stickman.png"
                allow_stretch: True
            Button:
                text: "Ir a parado"
                color: 0,0,1,1  # blue
                font_size: "20sp"
                background_normal: ""
                background_color: 0,0,0,0
                on_release: app.go_stand()
        
        # Sit icon + text
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            Image:
                id: sit_icon
                source: "assets/icons/sitting-stickman.png"
                allow_stretch: True
            Button:
                text: "Ir a sentado"
                color: 1,0,0,1  # red
                font_size: "20sp"
                background_normal: ""
                background_color: 0,0,0,0
                on_release: app.go_sit()