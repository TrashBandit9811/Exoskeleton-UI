#:kivy 2.1.0

<MenuScreen>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    Label:
        text: root.battery_level
        font_size: 40
        size_hint_y: 0.1

    BoxLayout:
        size_hint_y: 0.2
        spacing: 10

        Button:
            text: "Ir a parado"
            on_press: root.ir_a_parado()

        Button:
            text: "Ir a sentado"
            on_press: root.ir_a_sentado()

    BoxLayout:
        size_hint_y: 0.2
        spacing: 10

        Button:
            text: "Paso izquierdo"
            on_press: root.caminar_paso_izquierdo()

        Button:
            text: "Paso derecho"
            on_press: root.caminar_paso_derecho()

    BoxLayout:
        size_hint_y: 0.2
        spacing: 10

        Button:
            text: "Botón 1 (GO)"
            on_press: root.reset_leds()

        Button:
            text: "Botón 2"
            on_press: root.reset_leds()

    Label:
        text: "LED Indicators"
        size_hint_y: 0.1
        font_size: 20
